{
  "name": "comfy-mqtt",
  "version": "0.0.1",
  "description": "A REST API layer on top of MQTT with database storage and payload validation",
  "main": "dist/app.js",
  "bin": {
    "comfy-mqtt": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "prepublishOnly": "npm run build",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": ["mqtt", "rest", "api", "postgresql", "iot", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mqtt": "^5.3.5",
    "pg": "^8.11.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "files": [
    "dist",
    "database"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/comfy-mqtt.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/comfy-mqtt/issues"
  },
  "homepage": "https://github.com/yourusername/comfy-mqtt#readme"
}
